<div class='cart'>
  <%= hidden_field_tag :snap_token, @token %>
  <div class='popup'>
    <div class='row header'>
      <span>Items</span>
      <span>Amount</span>
    </div>

    <div class='row items'>
      <span>2</span>
      <span><%= @order.price %></span>
    </div>

    <div class='row checkout'>
      <span><a href='#'>View Cart ></a></span>
      <span class='checkout-button'>Checkout</span>
    </div>
  </div>
</div>
